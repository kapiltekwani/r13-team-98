- content_for :navigation do
  %ul.navigation
    %li{"data-slide" => 2, class: 'btn btn-primary'} Step 1
    %li{"data-slide" => 3, class: 'btn btn-primary'} Step 2
    %li{"data-slide" => 4, class: 'btn btn-primary'} Step 3


- content_for :slide1 do
  #slide1.slide{"data-slide" => "1", "data-stellar-background-ratio" => "0"}
    .row
      .col-md-2
      .col-md-4
        %h1 Between Friends
    .row
      .col-md-2
      .col-md-4
        = link_to users_facebook_oauth_path do 
          = image_tag 'facebook-connect.png'
    %a.button{"data-slide" => "2", title: ""}

- content_for :slide2 do
  #slide2.slide{"data-slide" => "2", "data-stellar-background-ratio" => "0.5"}
    .wrapper
      %img{alt: "", "data-stellar-ratio" => "3", "data-stellar-vertical-offset" => "-55", src: "/assets/slide2/blur-ball.png"}/
      %img{alt: "", "data-stellar-ratio" => "1", "data-stellar-vertical-offset" => "-12", src: "/assets/slide2/blur-ball-big.png"}/
      %img{alt: "", "data-stellar-ratio" => "1.5", "data-stellar-vertical-offset" => "-53", src: "/assets/slide2/focus-ball.png"}/
      %img{alt: "", "data-stellar-ratio" => "2.7", "data-stellar-vertical-offset" => "-25", src: "/assets/slide2/small-ball.png"}/
      %img{alt: "", "data-stellar-ratio" => "3", "data-stellar-vertical-offset" => "-55", src: "/assets/slide2/blur-ball.png"}/
      %img{alt: "", "data-stellar-ratio" => "1", "data-stellar-vertical-offset" => "-102", src: "/assets/slide2/blur-ball-big.png"}/
      %img{alt: "", "data-stellar-ratio" => "1.5", "data-stellar-vertical-offset" => "-53", src: "/assets/slide2/focus-ball.png"}/
      %img{alt: "", "data-stellar-ratio" => "2.7", "data-stellar-vertical-offset" => "-25", src: "/assets/slide2/small-ball.png"}/
    %span.slideno Slide 2
    %a.button{"data-slide" => "3", title: ""}
  / End Slide 2
- content_for :slide3 do
  #slide3.slide{"data-slide" => "3", "data-stellar-background-ratio" => "0.5"}
    .wrapper
      %img{alt: "", "data-stellar-ratio" => "1.4", "data-stellar-vertical-offset" => "-102", src: "/assets/slide3/freelance.png"}/
      %img{alt: "", "data-stellar-ratio" => "1.5", "data-stellar-vertical-offset" => "-53", src: "/assets/slide3/psdtuts.png"}/
      %img{alt: "", "data-stellar-ratio" => "2.7", "data-stellar-vertical-offset" => "-200", src: "/assets/slide3/rockable.png"}/
      %img{alt: "", "data-stellar-ratio" => "3", "data-stellar-vertical-offset" => "-200", src: "/assets/slide3/themeforest.png"}/
      %img{alt: "", "data-stellar-ratio" => "1", "data-stellar-vertical-offset" => "-200", src: "/assets/slide3/tutshub.png"}/
      %img{alt: "", "data-stellar-ratio" => "1.5", "data-stellar-vertical-offset" => "-200", src: "/assets/slide3/psdtuts.png"}/
    %span.slideno Slide 3
    %a.button{"data-slide" => "4", title: ""}
  / End Slide 3
- content_for :slide4 do
  #slide4.slide{"data-slide" => "4", "data-stellar-background-ratio" => "0"}
    %span.slideno Slide 4
    %span.parallaxbg Use the parallax effects on background /assets too!
  / End Slide 4



.row
  .col-md-10
  .col-md-2
    = yield :navigation
