.main-container
  .container
    .row
      .col-md-9
        #logo-title 
          = image_tag 'app-logo.png'
          Between You and Me
      .col-md-3
        = render 'shared/header'
  .container
    .row
      .col-lg-6
        #answer
          = render 'form', answer: @answer, question: @question
      .col-lg-6
        .well
          %legend Matched Answer
          - Question.limit(5).each do |q|
            .text-primary
              = q.question_text
            - 2.times do 
              = image_tag 'pratik.jpg', size: '40x40'
            %legend
  .container
    - if @pie_chart_label.empty?
      #result.well
        %h3.control-label
          = image_tag 'sad-face.jpg', size: '50x50'
          No friends have answered about still!! 
    - else
      #result.well
        %h3.control-label 
          = image_tag 'happy-face.jpg', size: '50x50'
          What friends think of you 
        #pie_chart 
        :javascript
          var pie_chart =  #{@pie_chart.to_json}
          var pie_chart_label = #{@pie_chart_label.to_json}
  
